generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Chat {
  id        String    @id @default(cuid())
  title     String
  mode      String
  diagram   String?
  history   Json? 
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]
}

model Message {
  id        String   @id @default(cuid())
  chatId    String
  role      String
  content   String
  createdAt DateTime @default(now())

  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)
}